{
    "name":"Chrome State App",
    "version":"0.0.1",
    "description": "Save all the tabs in your browser with just a click of a button.",
    "manifest_version":2,
    "icons": {
    "16": "icons/logo_16.png",
    "48": "icons/logo_48.png",
    "128": "icons/logo_128.png"
  },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"], 
            "js": ["main.js"]
        }
    ],
    "browser_action": {
        "default_popup" : "popup.html",
        "default_icon":"icons/favicon.png",
        "default_title" : "State"

    }

}